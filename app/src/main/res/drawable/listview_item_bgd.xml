<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#f00"/>
        </shape>
    </item>
    <!-- 给View的左边设置1dp的边框 -->
    <item android:left="3dp">
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>